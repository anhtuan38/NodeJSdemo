<div class="mt-4">
  <div class="row">

    {{#each Items}}
    <div class="col-sm-6 col-lg-4">
      <div class="card card-item">
        <img class="card-img-top" src="{{this.image}}" alt="card">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <a href="#" class="btn btn-primary">Mua</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>